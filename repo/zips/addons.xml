<?xml version='1.0' encoding='utf-8'?>
<addons><addon id="Wizard.Vizion" name="Vizion Wizard" version="1.0" provider-name="VizionG">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.six" />
        <import addon="script.kodi.android.update" optional="true" version="1.3.4" />
    </requires>
    
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>
    
    <extension point="xbmc.service" library="startup.py" start="startup" />
    
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Vizion Wizard</summary>
        <description lang="en">Simple Installation for VizionBuild</description>
        <platform>all</platform>
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <source>https://www.github.com/a4k-openproject/plugin.program.openwizard/</source>
        <news>
        </news>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.png</fanart>
        </assets>
    </extension>
</addon><addon id="vizion.repo" name="VizionRepo" version="1" provider-name="VizionG">
    <extension point="xbmc.addon.repository" name="New Repo">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/viziong/vizion.repo/master/repo/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/viziong/vizion.repo/master/repo/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/viziong/vizion.repo/master/repo/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>vision.repo</summary>
        <description>SmallRepo</description>
        <disclaimer />
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon></addons>